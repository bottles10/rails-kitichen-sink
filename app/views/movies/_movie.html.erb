<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Runtime in minutes:</strong>
    <%= movie.runtime_in_minutes %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= movie.rating %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= movie.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= link_to image_tag(movie.image), movie.image if movie.image.attached? %>
  </p>

</div>
